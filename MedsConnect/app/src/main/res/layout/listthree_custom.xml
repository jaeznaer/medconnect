<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="Product Name: "
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/order"
        android:layout_marginLeft="0dp"
        android:layout_toRightOf="@+id/order"
        android:id="@+id/product"
        android:text="1111111111111"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/costtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/order"
        android:layout_below="@+id/order"
        android:layout_marginTop="15dp"
        android:text="Quantity: "
        android:textSize="14dp"
        android:textColor="#757575"/>

    <TextView
        android:id="@+id/quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/costtext"
        android:layout_marginLeft="0dp"
        android:layout_toRightOf="@+id/costtext"
        android:text="Rs.20000"
        android:textSize="14dp"
        android:textColor="#757575"/>

</RelativeLayout>